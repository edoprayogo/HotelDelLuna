<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelDelLuna.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

@{
    var username = (ViewBag.Username == null) ? "Anonymous" : ViewBag.Username;
    var role = (ViewBag.Role == null) ? "Anonymous" : ViewBag.Role;
}

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotel Del Luna</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Index">Guest</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Room" asp-action="Index">Room</a>
                            </li>
                        </ul>
                    </div>*@
                <div class="flex-column">
                    <div class="user">
                        <span class="username">@username</span>
                        <span class="role">@role</span>
                    </div>
                    <div>
                        @if (role == "Anonymous")
                        {
                            <a class="btn btn-primary" asp-controller="Login" asp-action="Login">Login</a>

                        }
                        else
                        {
                            @if (role == "Guest")
                            {
                                <a class="btn btn-primary" asp-controller="Account" asp-action="MyProfile">My Profile</a>
                            }
                            else
                            {
                                <a class="btn btn-primary" asp-controller="Hotel" asp-action="ThisHotel">This Hotel</a>

                            }
                            <a class="btn btn-primary" asp-controller="Login" asp-action="Logout">Logout</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="d-flex">

            <ul class="navbar-nav col-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="AboutUs">About Us</a>
                </li>
                @if (role == "Administrator")
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Index">Guest</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Room" asp-action="Index">Room</a>
                    </li>
                }
                else if (role == "Guest")
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Room" asp-action="Index">Room</a>
                    </li>
                }
            </ul>

            <div class="right-container col-11">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>


        @*<div class="right-container">
            </div>*@
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HotelDelLuna.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.6.0.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("modelDialog", required: false)
</body>
</html>
