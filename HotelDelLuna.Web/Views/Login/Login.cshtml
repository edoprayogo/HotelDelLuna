@using HotelDelLuna.ViewModel.Models.Logins
@model LoginViewModel


<form method="post">
    <h1>Login Form</h1>
    <table class="table table-hover table-responsive-lg">
        <tbody>
            <tr>
                <td>
                    <input type="text" asp-for="Username" placeholder="Username ..." autocomplete="off" />
                </td>
                <td>
                    <p class="validation" data-for="Username"></p>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="password" asp-for="Password" placeholder="Password" />
                </td>
                <td>
                    <p class="validation" data-for="Password"></p>
                </td>
            </tr>
            <tr>
                <td>
                    <button class="btn-dark" type="submit">Sign In</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>