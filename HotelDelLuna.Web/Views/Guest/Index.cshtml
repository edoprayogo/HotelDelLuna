@using HotelDelLuna.ViewModel.Models.Guests
@using HotelDelLuna.ViewModel.Helpers

@model IEnumerable<GuestViewModel>
@{
    ViewData["Title"] = "Guest";
    Pager pager = new Pager();

    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="d-flex align-items-center">
    <h2 class="mr-5">Guest</h2>
    <div>
        <a class="btn-sm btn btn-primary insert-button" asp-controller="#" asp-action="#">Insert</a>
    </div>
</div>

<table class="table table-hover table-responsive-sm">
    <thead>
        <tr>
            <th>Register Number</th>
            <th>Guest Name</th>
            <th>Birth Date</th>
            <th>Gender</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RegisterId</td>
                <td>@item.FirstName @item.LastName </td>
                <td>@item.BirthCity, @item.BirthDate</td>
                <td>@item.Gender</td>
            </tr>
        }
    </tbody>
</table>

<partial name="~/Views/Shared/_pager.cshtml" model="@pager" />